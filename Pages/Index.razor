@page "/"
@inject NavigationManager NavManager

@code{ 
    public void SetSearchInput(string newQuery)
    {
        AppState.Query = newQuery;
        NavManager.NavigateTo($"/searchresults?{newQuery}");
    }
}

<div style="position:absolute; top:56px; bottom: 0; left:0; right:0; display:flex; align-items:center; justify-content:center; flex-direction:column">
    <SearchBar SetSearchInput="SetSearchInput" Location="idx" />
</div>
